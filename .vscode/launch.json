{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "envFile": "${workspaceFolder}/.env",
            "showLog": true
        },
        {
            "name": "Debug Worker",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/worker/main.go",
            "envFile": "${workspaceFolder}/.env",
            "showLog": true
        },
        {
            "name": "Debug Migrate",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/migrate/main.go",
            "args": ["-up"],
            "envFile": "${workspaceFolder}/.env",
            "showLog": true
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "showLog": true
        }
    ]
}
